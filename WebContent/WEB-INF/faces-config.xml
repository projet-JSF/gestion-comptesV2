<?xml version="1.0"?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
 <application/>
	<!-- ======== CONFIG DE LA NAVIGATION =================== -->
 	
 	<!--  1. regle de navigaation pour la page d'accueil.xhtml -->
 	
 	<navigation-rule>
 	
 		<!-- 1.1 page de départ -->
 		<from-view-id>/accueil.xhtml</from-view-id>
 		
 		<!-- 1.2 cas de navigation : accueil.xhtml vers accueil.xhtml (suppression) -->
 		<navigation-case>
 			<!-- 1.2.1 clé d'outcom (valeur de l'attribut 'action' de h:commandlink) -->
 			<from-outcome>listClient</from-outcome>
 			
 			<!-- 1.2.2 page de destination -->
 			<to-view-id>/accueil.xhtml</to-view-id>
 			
 		</navigation-case>
 		
 		
 		 <!-- 1.3 cas de navigation : accueil.xhtml vers /modifier_client.xhtml (modifier) -->
 		<navigation-case>
 			<!-- 1.2.1 clé d'outcom (valeur de l'attribut 'action' de h:commandlink) -->
 			<from-outcome>editClient</from-outcome>
 			
 			<!-- 1.2.2 page de destination -->
 			<to-view-id>/modifier_client.xhtml</to-view-id>
 			
 		</navigation-case>
 		
 		 <!-- 1.4 cas de navigation : accueil.xhtml vers ajouter_client.xhtml (modifier) -->
 		<navigation-case>
 			<!-- 1.4.1 clé d'outcom (valeur de l'attribut 'action' de h:commandlink) -->
 			<from-outcome>addClient</from-outcome>
 			
 			<!-- 1.4.2 page de destination -->
 			<to-view-id>/ajouter_client.xhtml</to-view-id>
 			
 		</navigation-case>
 	</navigation-rule>
 	
 
  	<!--  2. regle de navigation pour la page modifier_client.xhtml -->
 	
 	<navigation-rule>
 	
 		<!-- 2.1 page de départ -->
 		<from-view-id>/modifier_client.xhtml</from-view-id>
 		
 		<!-- 2.2 cas de navigation : modifier_client.xhtml vers accueil.xhtml (suppression) -->
 		<navigation-case>
 			<!-- 2.2.1 clé d'outcom (valeur de l'attribut 'action' de h:commandlink) -->
 			<from-outcome>listClient</from-outcome>
 			
 			<!-- 2.2.2 page de destination -->
 			<to-view-id>/accueil.xhtml</to-view-id>
 			
 		</navigation-case>
 		
  	</navigation-rule>	
 	
 	<!--  3. regle de navigation pour la page ajouter_client.xhtml -->
 	
 	<navigation-rule>
 	
 		<!-- 3.1 page de départ -->
 		<from-view-id>/ajouter_client.xhtml</from-view-id>
 		
 		<!-- 3.2 cas de navigation : ajouter_client.xhtml vers accueil.xhtml (suppression) -->
 		<navigation-case>
 			<!-- 3.2.1 clé d'outcom (valeur de l'attribut 'action' de h:commandbutton) -->
 			<from-outcome>listClient</from-outcome>
 			
 			<!-- 3.2.2 page de destination -->
 			<to-view-id>/accueil.xhtml</to-view-id>
 			
 		</navigation-case>	

 		
 	</navigation-rule>		

 
</faces-config>

